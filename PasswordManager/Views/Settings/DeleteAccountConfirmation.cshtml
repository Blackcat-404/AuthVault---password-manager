@using PasswordManager.ViewModels.Vault
@model DeleteAccountConfirmationViewModel
@{
    ViewData["Title"] = "Delete Account";
    ViewData["BodyClass"] = "vault-page";
    Layout = "_VaultLayout";
}

<!-- Delete Account Confirmation Modal -->
<div class="modal show" id="deleteAccountModal">
    <div class="modal-content delete-account-modal">
        <div class="warning-content">
            <div class="warning-icon">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="12"></line>
                    <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
            </div>

            <h3 class="warning-title">Are you absolutely sure?</h3>

            <div class="warning-message">
                <p>This action <strong>cannot be undone</strong>. This will permanently delete your account and remove all your data from our servers.</p>

                <div class="warning-list">
                    <div class="warning-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        All your passwords will be permanently deleted
                    </div>
                    <div class="warning-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        Your folders and categories will be removed
                    </div>
                    <div class="warning-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        All your settings and preferences will be lost
                    </div>
                    <div class="warning-item">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        This action cannot be reversed
                    </div>
                </div>
            </div>

            <div class="countdown-notice" id="countdownNotice">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                Delete button will be enabled in <span id="countdown">5</span> seconds...
            </div>
        </div>

        <div class="modal-actions">
            <a href="@Url.Action("GetSettings", "Settings")" class="btn btn-secondary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
                Cancel
            </a>
            <form asp-action="DeleteAccount" asp-controller="Settings" method="post" style="flex: 1;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                    <span id="deleteBtnText">Delete Account (5)</span>
                </button>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/delete-account.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/delete-account.js" asp-append-version="true"></script>
}