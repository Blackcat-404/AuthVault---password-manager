@using PasswordManager.ViewModels.Vault
@model FAuthenticationEmailViewModel
@{
    ViewData["Title"] = "Settings";
    ViewData["EnablePasswordGenerator"] = true;
    Layout = "_VaultLayout";
}
<!-- Header -->
<header class="header">
    <div class="header-title-section">
        <h1 class="page-title">Two-Factor Authentication</h1>
        <p class="page-subtitle">Manage your 2FA to be safe</p>
    </div>
</header>
<!-- Settings Content -->
<div class="content-area">
    <div class="form-container">
        <!-- Form for sending code -->
        <form asp-action="PostSendCode" asp-controller="Settings" method="post" class="vault-form" id="sendCodeForm">
            @Html.AntiForgeryToken()
            <div class="form-section">
                <h3 class="form-section-title">Two-Factor Authentication Email</h3>
                <div class="form-group">
                    <label for="email">Email*</label>
                    <input asp-for="Email" type="email" id="email" name="Email" class="form-input" placeholder="example@gmail.com" required>
                </div>
            </div>
            <div class="form-actions">
                <a href="@Url.Action("Settings", "Vault")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    Send code
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/vault-forms.css" asp-append-version="true" />
}