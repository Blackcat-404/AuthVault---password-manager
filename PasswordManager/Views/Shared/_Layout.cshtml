<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthVault</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/password-generator.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body class="@ViewData["BodyClass"]">

    @RenderBody()

    @if (ViewData["EnablePasswordGenerator"] as bool? == true)
    {
        @await Html.PartialAsync("_PasswordGenerator")
    }

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
